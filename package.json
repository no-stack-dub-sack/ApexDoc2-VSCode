{
	"name": "apexdoc2-vs-code",
	"displayName": "ApexDoc2 VS Code",
	"description": "The VS Code companion extension for ApexDoc2, making documenting your Salesforce Apex files an easy, integrated experience when using VS Code for Salesforce development.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.runApexDoc2"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runApexDoc2",
				"title": "Run ApexDoc2"
			}
		]
	},
	"configuration": {
		"type": "object",
		"title": "ApexDoc2 VS Code Configuration",
		"properties": {
			"apexdoc2.config": {
				"type": "object",
				"default": {
					"sourceDirectory": "",
					"includes": [],
					"excludes": [],
					"targetDirectory": "",
					"sourceControlURL": "",
					"homePagePath": "",
					"bannerPagePath": "",
					"scope": [
						"global",
						"public",
						"protected",
						"private",
						"testMethod",
						"webService"
					],
					"title": "ApexDocs",
					"showTOCSnippets": true,
					"sortOrder": "alpha"
				},
				"description": "Configure ApexDoc2 to document your Apex .cls files."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.123",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"lodash": "^4.17.11"
	}
}
